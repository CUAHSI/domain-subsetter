{
    // example file for debugging a remote python application
    // move this to .vscode/launch.json
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app/api/subsetter",
                    "remoteRoot": "/subsetter"
                }
            ]
        }
    ]
}